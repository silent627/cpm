# 构建阶段
FROM maven:3.8.6-openjdk-8-slim AS build
WORKDIR /app

# 复制pom文件
COPY pom.xml .
COPY cpm-common/pom.xml ./cpm-common/
COPY cpm-file-service/pom.xml ./cpm-file-service/

# 修改父pom.xml，只保留当前需要的模块
RUN awk '/<modules>/{print; print "        <module>cpm-common</module>"; print "        <module>cpm-file-service</module>"; next} /<\/modules>/{print; next} /<module>/ && !/<modules>/ && !/<\/modules>/{next} {print}' pom.xml > pom.xml.tmp && mv pom.xml.tmp pom.xml

# 先复制 cpm-common 的源代码并安装，以便后续模块可以依赖它
COPY cpm-common/src ./cpm-common/src
RUN mvn clean install -DskipTests -pl cpm-common -am

# 复制 file-service 的源代码
COPY cpm-file-service/src ./cpm-file-service/src

# 构建项目
RUN mvn clean package -DskipTests -pl cpm-file-service -am

# 运行阶段
FROM openjdk:8-jre-slim
WORKDIR /app

# 复制jar文件（排除原始jar，只复制Spring Boot打包的可执行jar）
COPY --from=build /app/cpm-file-service/target/cpm-file-service-*.jar app.jar

# 创建上传目录
RUN mkdir -p /app/uploads

# 暴露端口
EXPOSE 8086

# 启动应用
ENTRYPOINT ["java", "-jar", "app.jar"]
